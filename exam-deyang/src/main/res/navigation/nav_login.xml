<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/loginUserFragment">

    <fragment
        android:id="@+id/loginUserFragment"
        android:name="com.zuoyouxue.ui.user.LoginUserFragment"
        android:label="fragment_login_user"
        tools:layout="@layout/fragment_login_user">
        <action
            android:id="@+id/action_to_reset"
            app:destination="@id/resetPwdFragment" />
        <action
            android:id="@+id/action_to_find"
            app:destination="@id/findUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/findUserFragment"
        android:name="com.zuoyouxue.ui.user.FindUserFragment"
        android:label="fragment_find_user"
        tools:layout="@layout/fragment_find_user" />
    <fragment
        android:id="@+id/resetPwdFragment"
        android:name="com.zuoyouxue.ui.user.ResetPwdFragment"
        android:label="fragment_reset_pwd"
        tools:layout="@layout/fragment_reset_pwd" />
</navigation>