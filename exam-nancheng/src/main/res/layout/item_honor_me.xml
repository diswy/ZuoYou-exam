<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <data>

        <variable
            name="myHonor"
            type="com.ebd.common.vo.HonorMe" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{myHonor.subjectTypeName}"
            android:textColor="@color/title"
            android:textSize="15sp"
            tools:text="语文" />

        <TextView
            android:id="@+id/tv_safflower"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{String.valueOf(myHonor.flowerCount)}"
            android:textColor="@color/title"
            android:textSize="15sp"
            tools:text="31" />

        <TextView
            android:id="@+id/tv_honorary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@{String.valueOf(myHonor.medaCount)}"
            android:textColor="@color/title"
            android:textSize="15sp"
            tools:text="12" />

    </LinearLayout>

</layout>